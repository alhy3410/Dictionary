<h1>Enter the definition here! For: <%= @word.word_name() %></h1>

<form action="/definitions" method="post">
  <input id='definition_id' name='definition_id' type='hidden' value='<%= @word.id() %>'>
  <label for='definition'>Word's Definition</label>
  <input id='definition' name='definition' type='text'>
  <button type="submit"> Add Definition </button>
</form>
